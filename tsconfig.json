{
    "include": ["./"],
    "exclude": ["./build/", "./node_modules"],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["*", "src/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./src/@types", "./node_modules/@types"]
    }
}
